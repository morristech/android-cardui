<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CardRootSV" >

    <LinearLayout style="@style/CardRootLL" >

        <LinearLayout style="@style/CardBodyLL" >

            <TextView
                android:id="@+id/tvTitle"
                android:text="@string/about_this_app"
                style="@style/CardTitle" />

            <View style="@style/CardHR" />

            <TextView
                android:id="@+id/tvAboutApp"
                android:text="@string/lorem"
                style="@style/CardTextNormal" />

            <View style="@style/CardHR" />

            <TextView
                android:id="@+id/tvMarketLink"
                android:text="@string/please_rate_this_app_if_you_like_it_"
                style="@style/CardTextNormal" />

            <ImageView
                android:id="@+id/ivAppIcon"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

        </LinearLayout>

        <LinearLayout style="@style/CardBodyLL" >

            <TextView
                android:text="@string/about_me"
                style="@style/CardTitle" />

            <View style="@style/CardHR" />

            <LinearLayout
                android:layout_height="128dp"
                android:layout_width="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/ivLogo"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/logo_uvwxy" />
            </LinearLayout>

            <TextView
                android:text="@string/about_uvwxy"
                style="@style/CardTextNormal" />

            <View style="@style/CardHR" />

            <TextView
                android:id="@+id/tvMailLink"
                android:text="@string/contact_"
                style="@style/CardTextNormal" />

            <ImageView
                android:id="@+id/ivMailLink"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_mail" />

            <ImageView
                android:id="@+id/ivWwwLink"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_www" />
        </LinearLayout>

        <LinearLayout style="@style/CardBodyLL" android:id="@+id/llLicenses" >

            <TextView
                android:id="@+id/tvLicenses"
                android:text="@string/open_source_licenses"
                style="@style/CardTitle" />

            <View style="@style/CardHR" />

            <TextView
                android:id="@+id/tvLicenseExplanation"
                android:text="@string/license_explanation"
                style="@style/CardTextNormal" />

        </LinearLayout>
    </LinearLayout>

</ScrollView>